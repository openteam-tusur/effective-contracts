<!DOCTYPE html>
<html>
  <head>
    <title>Контрольная точка</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="message_wrapper <%= 'notice' if notice %> <%= 'alert' if alert %>" <%= "style=display:none;" unless notice || alert %>>
      <%= notice %>
      <%= alert %>
    </div>

    <div class="header">
      <div class="logo">
        <%= link_to "Эффективные контракты", root_path %>
      </div>
      <div class="title">Эффективные контракты</div>
      <div class="auth_block">
        <%= render :partial => "sso-auth/shared/user_box" %>
      </div>
    </div>
      <div class="search_form">
        <%= simple_form_for :student, :url => search_path, :html => { :method => :get, :novalidate => true } do |f| %>
            <%= f.input :search, :input_html => { :value => (params[:student][:search] if params[:student])}, label: false %>
          <div class="buttons">
            <%= f.submit 'Найти' %>
          </div>
        <% end %>
      </div>

    <div class='menu'>
      <%= link_to "Управление правами доступа", permissions_path    if can? :manage, Permission.new %>
    </div>
    <%= yield %>

    <div class="footer">
      По всем вопросам пишите на <a href='mailto:tusur-checkpoint@openteam.ru'>tusur-checkpoint@openteam.ru</a>
      <%= link_to "Инструкция", '/files/help.pdf' %>
    </div>
   </body>
</html>
